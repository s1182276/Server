FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

WORKDIR /src
COPY ["./KeuzeWijzerCore.dll", "/app/"]
COPY ["Api/KeuzeWijzerApi.csproj", "."]
RUN dotnet restore "./KeuzeWijzerApi.csproj"

COPY ./Api .
RUN rm -rf ./Migrations
RUN dotnet build "KeuzeWijzerApi.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "./KeuzeWijzerApi.csproj" -c Release -o /app/publish /p:UseAppHost=false

RUN dotnet tool install --global dotnet-ef --version 8.*
ENV PATH="${PATH}:/root/.dotnet/tools"
RUN dotnet ef migrations add clean
ENTRYPOINT ["dotnet", "ef", "database", "update"]