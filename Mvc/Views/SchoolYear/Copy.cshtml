@model KeuzeWijzerMvc.ViewModels.SchoolYearViewModel
@{
    ViewData["Title"] = "OER Kopiëren";
}

<h1>OER kopiëren</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CopySchoolYear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @using Newtonsoft.Json
            @if (!string.IsNullOrEmpty(Model.SchoolModulesJson))
            {
                 // We serialize the modules here, because they could change in the future. This way we are not dependent on individual fields
                 // You can deserialize it with the method included in the viewmodel.
                <input type="hidden" asp-for="SchoolModulesJson" value="@Html.Raw(Model.SchoolModulesJson)" />
            }

            <div class="form-group mt-3">
                <input type="submit" value="Kopiëren" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-danger">Terug naar overzicht</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
