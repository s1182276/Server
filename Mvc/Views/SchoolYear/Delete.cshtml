@model SchoolYearDto

@{
    ViewData["Title"] = "Verwijderen OER";
}

<h1>Verwijderen Module</h1>

<h3>Weet je zeker dat je dit OER wilt verwijderen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Aantal modules
        </dt>
        <dd class = "col-sm-10">
            @(Model.Modules.Count() > 0 ? $"{Model.Modules.Count()}" : "0")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Verwijderen" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-danger">Terug naar overzicht</a>
    </form>
</div>