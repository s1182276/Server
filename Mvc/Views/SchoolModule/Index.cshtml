@using System.Web
@model IEnumerable<SchoolModuleDto>

@{
    ViewData["Title"] = "Module overzicht";
}

<h1>Module overzicht</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                Omschrijving
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @{
                        var description = System.Text.RegularExpressions.Regex.Replace(item.Description, "<.*?>", string.Empty); // Remove HTML tags
                        var words = description.Split(' ');
                        var formattedDescription = new List<string>();

                        for (int i = 0; i < words.Length; i += 3)
                        {
                            formattedDescription.Add(string.Join(" ", words.Skip(i).Take(3)));
                        }

                        foreach (var line in formattedDescription)
                        {
                            @Html.Raw(line + "<br />")
                        }
                    }
                </td>
            <td>
                    @Html.ActionLink("Aanpassen", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-secondary btn-sm" })
                    @Html.ActionLink("Kopiëren", "Copy", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm" })
                    @Html.ActionLink("Verwijderen", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
            </td>
        </tr>
}
    </tbody>
</table>