@model KeuzeWijzerCore.Models.SchoolModuleDto

@{
    ViewData["Title"] = "Create Module";
}

<h1>Create Module</h1>
<hr />

<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Module Name and Cohort Selection -->
        <div class="form-group row">
            <div class="col-sm-6">
                <label asp-for="Name" class="control-label">Naam van module</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="SchoolYearId" class="control-label">Cohort</label>
                <select asp-for="SchoolYearId" asp-items="ViewBag.SchoolYearId" class="form-control"></select>
                <span asp-validation-for="SchoolYearId" class="text-danger"></span>
            </div>
        </div>

        <!-- Description -->
        <div class="form-group">
            <label asp-for="Description" class="control-label">Omschrijving</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Active Status and Periods -->
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" id="Period1" type="checkbox" onchange="updateSemester()" />
                <label class="form-check-label" for="Period1">Periode 1</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" id="Period2" type="checkbox" onchange="updateSemester()" />
                <label class="form-check-label" for="Period2">Periode 2</label>
            </div>
        </div>

        <!-- Semester (Hidden Input Field) -->
        <input type="hidden" asp-for="Semester" id="Semester" />

        <!-- Additional Fields for Requirements -->
        <div class="form-group">
            <label asp-for="MinimalEC" class="control-label">Minimaal benodigde studiepunten</label>
            <input asp-for="MinimalEC" class="form-control" />
            <span asp-validation-for="MinimalEC" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PRequired" class="control-label">Propedeuse behaald</label>
            <input class="form-check-input" type="checkbox" asp-for="PRequired" />
            <span asp-validation-for="PRequired" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="form-group">
            <input type="submit" value="Opslaan" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function updateSemester() {
            var period1 = document.getElementById('Period1').checked;
            var period2 = document.getElementById('Period2').checked;

            if (period1 && period2) {
                document.getElementById('Semester').value = 3;
            } else if (period1) {
                document.getElementById('Semester').value = 1;
            } else if (period2) {
                document.getElementById('Semester').value = 2;
            } else {
                document.getElementById('Semester').value = 0; // or whatever default value you prefer when neither is checked
            }
        }
    </script>
}
