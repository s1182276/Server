@model SchoolModuleDto

@{
    ViewData["Title"] = "Module aanmaken";
}

<h1>Module kopiëren</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select id="SchoolYearId" name="SchoolYearId" asp-items="@ViewBag.SchoolYears">
                    <option selected disabled>Kies een OER</option>
                </select>
            </div>
            <div class="form-group mt-3">
                <input id="id" name="SelectedGraphTypeDropDown.value" hidden />
                <input type="submit" value="Kopiëren" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-danger">Terug naar overzicht</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
